                android:text="@string/espacioEnBlanco"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorTileTextLight"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible"/>

    </GridLayout>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/refresh"
            android:id="@+id/ibtnRefresh"
            android:background="@color/colorBackgroundGrid" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/grid_layout" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.864"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.465" android:layout_marginTop="200dp"/>

    <Chronometer android:layout_width="115dp" android:layout_height="40dp"
                 android:id="@+id/chronometer" android:fontFamily="@font/roboto"
                 android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/ibtnRefresh"
                 android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toTopOf="@+id/grid_layout" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toBottomOf="@+id/rlScore" app:layout_constraintHorizontal_bias="0.151"
                 app:layout_constraintVertical_bias="0.575"/>
</android.support.constraint.ConstraintLayout>