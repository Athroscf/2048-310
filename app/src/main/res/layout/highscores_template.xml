<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <TextView
                        android:text="@string/espacioEnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" android:id="@+id/tvUser" android:layout_weight="1"
                        android:textColor="@color/colorTileTextLight" android:textAlignment="center"
                        android:fontFamily="@font/roboto"/>
                <TextView
                        android:text="@string/espacioEnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" android:id="@+id/tvLevel" android:layout_weight="1"
                        android:fontFamily="@font/roboto" android:textColor="@color/colorTileTextLight"/>
                <TextView
                        android:text="@string/espacioEnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" android:id="@+id/tvPoints" android:layout_weight="1"
                        android:fontFamily="@font/roboto" android:textColor="@color/colorTileTextLight"/>
                <TextView
                        android:text="@string/espacioEnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" android:id="@+id/tvTime" android:layout_weight="1"
                        android:fontFamily="@font/roboto" android:textColor="@color/colorTileTextLight"/>
                <TextView
                        android:text="@string/espacioEnBlanco"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" android:id="@+id/tvMoves" android:layout_weight="1"
                        android:fontFamily="@font/roboto" android:textColor="@color/colorTileTextLight"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>